<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_common_navigation" />

    <include layout="@layout/include_common_remind" />

    <include layout="@layout/include_common_network_status" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/distance_view">

        <TextView
            style="@style/TitleTextStyle"
            android:text="您的充值金额：" />

        <TextView
            android:id="@+id/tvMoney"
            style="@style/TitleTextStyle"
            android:text="¥500.00"
            android:textColor="@color/red" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            style="@style/RadioStyle"
            android:drawableLeft="@mipmap/rder_icon_alipay"
            android:text="支付宝支付" />

        <View
            style="@style/Line"
            android:layout_marginLeft="@dimen/distance_view" />

        <RadioButton
            style="@style/RadioStyle"
            android:drawableLeft="@mipmap/rder_icon_wechat"
            android:text="微信支付" />

        <View
            style="@style/Line"
            android:layout_marginLeft="@dimen/distance_view" />
    </RadioGroup>

    <TextView
        style="@style/BtnRoundStyle"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="支付" />
</LinearLayout>
