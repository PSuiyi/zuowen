<resources>

    <style name="BtnStyle" parent="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/red</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/distance_view</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>


    <style name="LineVerGreen">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/status_color</item>
    </style>

    <style name="BtnRoundStyle" parent="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:background">@drawable/bg_btn_round</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BtnTagStyle" parent="TextStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:background">@drawable/bg_tag_red</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="LineOrange" parent="Line">
        <item name="android:background">#F77F7A</item>
        <item name="android:layout_height">1dp</item>
    </style>


    <style name="EditRoundStyle" parent="EditSingleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:background">@drawable/bg_btn_boder</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="RadioStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/distance_divider</item>
        <item name="android:drawableRight">@drawable/bg_cb_select</item>
        <item name="android:padding">@dimen/distance_view</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

</resources>
