<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_gallery_pick_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/include_common_navigation"></include>

        <include layout="@layout/gallery_title" />
    </FrameLayout>

    <include layout="@layout/include_common_remind"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvGalleryImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

</LinearLayout>