<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="@dimen/view_star_wigth"
            android:layout_height="@dimen/view_star_height"
            android:layout_marginRight="@dimen/star_space"
            android:background="@drawable/star_gry" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="@dimen/view_star_wigth"
            android:layout_height="@dimen/view_star_height"
            android:layout_marginRight="@dimen/star_space"
            android:background="@drawable/star_gry" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="@dimen/view_star_wigth"
            android:layout_height="@dimen/view_star_height"
            android:layout_marginRight="@dimen/star_space"
            android:background="@drawable/star_gry" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="@dimen/view_star_wigth"
            android:layout_height="@dimen/view_star_height"
            android:layout_marginRight="@dimen/star_space"
            android:background="@drawable/star_gry" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="@dimen/view_star_wigth"
            android:layout_height="@dimen/view_star_height"
            android:background="@drawable/star_gry" />

        <TextView
            android:id="@+id/tvScore"
            style="@style/TextStyle"
            android:layout_marginLeft="15dp"
            android:text="4.0"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>